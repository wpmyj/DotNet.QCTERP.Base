                    $treegrid.treegrid('reload');

                }, error: function (data) {
                    $.messager.alert("提示", "移除权限失败！", "info");

                }
            });
        });
    }*@
    function getId(id) {
        id = id || $treegrid.treegrid("getSelected").id;
        if (!id) {
            $.messager.alert("提示", "请选择一条数据！", "info");
        }
        return id;
    }
</script>
